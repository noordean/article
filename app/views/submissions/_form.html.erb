<%= form_with(model: submission, local: true) do |form| %>
  <div class="form-group">
    <%= form.text_field :first_name, class: "form-control", placeholder: "First name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :middle_name, class: "form-control", placeholder: "Middle name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class: "form-control", placeholder: "Last name"%>
  </div>

  <div class="form-group">
    <%= form.number_field :age, class: "form-control", placeholder: "Age" %>
  </div>

  <div class="form-group">
    <%= form.text_field :candidate_class, class: "form-control", placeholder: "Class" %>
  </div>

  <div class="form-group">
    <%= form.text_field :school, class: "form-control", placeholder: "School name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= form.text_field :mobile_number_one, class: "form-control", placeholder: "Mobile number, e.g: 07065437832" %>
  </div>

  <div class="field">
    <%= form.text_field :mobile_number_two, class: "form-control", placeholder: "Alternative mobile number, e.g: 07065437832" %>
  </div>

  <div class="field">
    <%= form.text_area :article, class: "form-control article-field", placeholder: "Write your article" %>
  </div>

  <button type="submit" class="btn btn-outline-primary">Submit</button>
<% end %>
