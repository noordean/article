<p id="notice"><%= notice %></p>

<h1>Submissions</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Class</th>
      <th>School</th>
      <th>Article</th>
      <th>Email</th>
      <th>Mobile number one</th>
      <th>Mobile number two</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.first_name %></td>
        <td><%= submission.middle_name %></td>
        <td><%= submission.last_name %></td>
        <td><%= submission.age %></td>
        <td><%= submission.class %></td>
        <td><%= submission.school %></td>
        <td><%= submission.article %></td>
        <td><%= submission.email %></td>
        <td><%= submission.phone_number %></td>
        <td><%= submission.mobile_number_two %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
