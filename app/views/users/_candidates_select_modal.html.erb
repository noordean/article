<div class="modal fade" id="select_candidates" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
        <%= form_with(url: "/select_candidates", local: true) do %>
        <div class="modal-body">
            <div class="form-group">
              <select name="candidate_type" class="form-control" id="candidates-select" required="true">
                <option value="1">All candidates</option>
                <option value="0" selected>Successful candidates</option>
                <option value="-1">Unsucessful candidates</option>
              </select>
            </div>
            <div class="form-group">
              <select name="difficulty_level" class="form-control" id="difficulty-level" required="true">
                <option value="1">Hard</option>
                <option value="0">Medium</option>
                <option value="-1">Easy</option>
              </select>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-dark modal-close" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-outline-primary modal-submit">Submit</button>
            </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
